<div class="w-full h-full bg-gray-300 flex flex-col items-center">
  <div class="post-container flex flex-col items-center border-2 border-gray-800">
    <%= image_tag(post.photo.variant(resize_to_fill: [300, 300, { gravity: 'center' }])) if post.photo.attached? %>
    <div class="w-3/4 h-full flex">
      <div class="flex flex-col items-center w-1/3">
        <h4 class="text-lg mt-2"> <%= post.username.capitalize %> </h4>
        <h4 class="time-posted mt-4"> <%= time_ago_in_words post.created_at || Time.now %> ago <h4>
      </div>
      <div class="h-full w-2/3 flex flex-col justify-between">
        <h4 class="text-lg mt-2"> <%= post.body %> </h4>
        <div class="h-10 w-full">

        </div>
      </div>
    </div>
  </div>
</div>
