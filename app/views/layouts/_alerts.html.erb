<% if notice %>
  <div class="bg-green-200 border-t border-b border-green-800 text-black px-4 py-3 notice" role="notice">
    <p class="font-bold">Awesome</p>
    <p class="text-sm"><%= notice %></p>
  </div>
<% end %>
<% if alert %>
  <div class="bg-red-200 border-t border-b border-red-800 text-black px-4 py-3 alert" role="alert">
    <p class="font-bold">Oh no</p>
    <p class="text-sm"><%= alert %></p>
  </div>
<% end %>
